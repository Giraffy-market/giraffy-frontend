{
  "singleQuote": true,
  "endOfLine": "lf",
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^(?:@/|\\.\\./|\\./)layouts/(.*)$",
    "^(?:@/|\\.\\./|\\./)pages/(.*)$",
    "^(?:@/|\\.\\./|\\./)modules/(.*)$",
    "^(?:@/|\\.\\./|\\./)components/(.*)$",
    "^(?:@/|\\.\\./|\\./)ui/(.*)$",
    "^(?:@/|\\.\\./|\\./)store/(.*)$",
    "^(?:@/|\\.\\./|\\./)api/(.*)$",
    "^(?:@/|\\.\\./|\\./)types/(.*)$",
    "^(?:@/|\\.\\./|\\./)constants/(.*)$",
    "^(?:@/|\\.\\./|\\./)shared/(.*)$",
    "^(?:@/|\\.\\./|\\./)assets/(.*)$",
    "^(?:@/|\\.\\./|\\./)styles/(.*)$",
    "^[./]"
  ]
}
